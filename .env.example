# =============================================================================
# PAIR TRADING PRO - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
# =============================================================================

# MetaTrader 5 Account Configuration
# ----------------------------------
MT5_LOGIN=12345678
MT5_PASSWORD=your_password_here
MT5_SERVER=MetaQuotes-Demo

# Optional: MT5 Path (if not in default location)
# MT5_PATH=C:\Program Files\MetaTrader 5\terminal64.exe

# Trading Configuration
# ---------------------
# Override default trading pair (optional)
# PRIMARY_SYMBOL=BTCUSD
# SECONDARY_SYMBOL=ETHUSD

# Logging Configuration
# ---------------------
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Risk Management Overrides (optional)
# ------------------------------------
# DAILY_LOSS_LIMIT_PCT=10.0
# MAX_POSITION_PCT=20.0
# MAX_RISK_PCT=2.0

# Session Configuration (optional)
# --------------------------------
# SESSION_START_TIME=00:00
# SESSION_END_TIME=23:59
# TIMEZONE=UTC

# Development/Debug Settings
# --------------------------
# DEBUG_MODE=false
# DRY_RUN=false
# PAPER_TRADING=false
